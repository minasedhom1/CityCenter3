<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:gravity="top"
    android:id="@+id/header_layout">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@mipmap/baner"

>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="250dp"
            android:layout_alignParentRight="true"

            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/logo"
                android:layout_gravity="right"
                android:id="@+id/logo_header"


                />
        </LinearLayout>

        <ImageView
            android:layout_width="23dp"
            android:layout_height="23dp"
            app:srcCompat="@mipmap/nav_icon"
            android:id="@+id/icon_nav"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="13dp"
            android:layout_marginStart="13dp"
            android:layout_marginTop="5dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/icon_nav"
            android:layout_alignStart="@+id/icon_nav"
            android:layout_marginBottom="11dp">

            <ImageView
                android:padding="4dp"
                android:layout_width="67dp"
                android:layout_height="67dp"
                app:srcCompat="@mipmap/prof"
                android:id="@+id/home_prof"
                android:background="@drawable/circle_shape_border"
       />

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="13dp"
                    android:layout_marginLeft="11dp"
                    android:id="@+id/linearLayout"
                    android:layout_marginStart="11dp">

                    <TextView
                        android:text="Ù‹Welcome!"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/home_name"
                        android:textColor="@android:color/background_light"
                        android:textStyle="normal|bold"
                         />

                    <com.facebook.share.widget.LikeView
                            android:layout_width="wrap_content"
                            android:layout_height="27dp"
                            app:srcCompat="@mipmap/facelike"
                            android:id="@+id/fb_like_btn"
                 />
                </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>