        <ImageView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/logo2"
            android:id="@+id/logo_header"
            android:soundEffectsEnabled="false"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:layout_gravity="center_horizontal"
            />
        <ImageView
            android:layout_width="27dp"
            android:layout_height="27dp"
            app:srcCompat="@drawable/nav_icon"
            android:layout_marginTop="10dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:tint="@drawable/notification_selector"
            android:clickable="true"
            android:id="@+id/nav_icon"

            />
        <FrameLayout
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/notifi_frame_lo">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:padding="4dp"
            app:srcCompat="@drawable/notificationicon2"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="7dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:id="@+id/notify_icon"
            android:tint="@drawable/notification_selector"
            />
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:background="@drawable/rounded_corner_btn2"
                android:layout_width="15dp"
                android:layout_height="20dp"
                android:text="7"
                android:textStyle="bold"
                android:id="@+id/badge_number"/>
        </FrameLayout>


    </FrameLayout>

</LinearLayout>