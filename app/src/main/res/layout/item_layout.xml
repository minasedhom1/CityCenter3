<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1"
    android:background="#59ffffff"
    android:paddingTop="10dp"
    android:layout_marginBottom="10dp"
    android:paddingStart="5dp"
    android:paddingEnd="5dp">

<!--    <ImageView
        android:contentDescription="an Image"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@mipmap/carfor"
        andritemIDd:iditemID@+id/item_icon"
        android:background="#fff"
        android:layout_gravity="center"
        />-->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager_list"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@color/white"
            />
        <android.support.design.widget.TabLayout
            android:id="@+id/tabDots"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabBackground="@drawable/tab_selector"
            app:tabGravity="center"
            app:tabIndicatorHeight="0dp"
            android:layout_gravity="bottom"
            />
    </FrameLayout>
<View  android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="#bdbdbd"/>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp">
        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">

        <TextView
            android:text="Carrefour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name2_tv"
            android:textSize="19sp"
            android:textColor="#000080"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:maxWidth="200dp"
            android:fontFamily="@font/cairo"
            />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/rounded_cornenr_imageview">


            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                app:srcCompat="@mipmap/staron"
                android:layout_marginTop="1dp"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2.0"
                    android:textSize="15sp"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/item_rate_value"
                    android:textColor="#FFCD02"
                    android:layout_marginTop="-3dp"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rates_num"
                android:text="(4)"
                android:layout_marginLeft="5dp"
                android:textSize="14sp"
                android:fontFamily="@font/cairo"
                android:layout_marginTop="-2dp"/>
        </LinearLayout>
        <com.sackcentury.shinebuttonlib.ShineButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@android:color/darker_gray"
            app:btn_color="@android:color/darker_gray"
            app:btn_fill_color="#FF6666"
            app:allow_random_color="true"
            app:big_shine_color="#FF6666"
            app:click_animation_duration="200"
            app:shine_animation_duration="1500"
            app:shine_turn_angle="10"
            app:small_shine_offset_angle="20"
            app:shine_distance_multiple="1.5"
            app:small_shine_color="#CC9999"
            app:shine_count="8"
            app:siShape="@raw/heart"
            android:layout_gravity="end"
            android:layout_marginRight="15dp"
            android:id="@+id/like_btn"
            />
    </FrameLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_cornenr_spinner"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="10dp"
    >
    <Spinner
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:entries="@array/rate_values"
        android:id="@+id/rate_spinner"
        style="@style/SpinnerTextViewItem"
        >

    </Spinner>
    </LinearLayout>
    <TextView
        android:text="One of the most dignfied hyper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/item_description"
        android:layout_marginLeft="15dp"
        android:textSize="15sp"
        android:textColor="#3f3f3f"
        android:fontFamily="@font/cairo"
        android:lineSpacingExtra="-5dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:layout_marginTop="-10dp">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/promo_layout"
          >

        <TextView
            android:textSize="13sp"
            android:padding="7dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/rounded_promo_tab"
            android:layout_gravity="top"
            android:layout_marginTop="15dp"
            android:id="@+id/promo_tv"
            android:text="Click View Offers To Download Seoudi Magazine. Valid From April 1st To April 18th 2017"
            android:fontFamily="@font/cairo"
            android:lineSpacingExtra="-5dp"
            />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Promotion"
                android:textStyle="bold"
                android:textColor="#cdC1195A"
                android:textSize="16sp"
                android:layout_gravity="center|top"
                android:fontFamily="@font/cairo"
                />
        </FrameLayout>
        <TableRow android:layout_width="match_parent"
            android:layout_height="42dp"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp"
            android:gravity="center_horizontal">
            <ImageView
                android:id="@+id/iv_facebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_facebook2" />

            <ImageView
                android:id="@+id/iv_twitter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_twitter" />

            <ImageView
                android:id="@+id/iv_instagram"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_instagram" />

            <ImageView
                android:id="@+id/iv_youtube"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_youtube" />

        </TableRow>
   <Button
       android:layout_width="wrap_content"
       android:layout_height="44dp"
       android:id="@+id/option_btn"
       android:text="View"
       android:textColor="@drawable/button_text_color"
       android:textAllCaps="false"
       android:textSize="17sp"
       android:gravity="center_vertical"
       android:paddingLeft="60dp"
       android:background="@mipmap/menu"
       android:visibility="visible"
       android:layout_gravity="center_horizontal"
       android:fontFamily="@font/cairo"

       />
        <Button
            android:layout_marginTop="3dp"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:id="@+id/item_call_btn"
            android:text="Call"
            android:textColor="@drawable/button_text_color"
            android:textAllCaps="false"
            android:textSize="17sp"
            android:gravity="center_vertical"
            android:paddingLeft="60dp"
            android:background="@mipmap/call"
            android:visibility="visible"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/cairo"

            />

        <Button
            android:layout_marginTop="3dp"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:id="@+id/item_share_btn"
            android:text="Share"
            android:textColor="@drawable/button_text_color"
            android:textAllCaps="false"
            android:textSize="17sp"
            android:gravity="center_vertical"
            android:paddingLeft="60dp"
            android:background="@mipmap/share"
            android:visibility="visible"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/cairo"

            />
        <Button
            android:layout_marginTop="3dp"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:id="@+id/item_comment_btn"
            android:text="Comment"
            android:textColor="@drawable/button_text_color"
            android:textAllCaps="false"
            android:textSize="17sp"
            android:gravity="center_vertical"
            android:paddingLeft="60dp"
            android:background="@mipmap/comment"
            android:visibility="visible"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/cairo"

            />

        <Button
            android:layout_marginTop="3dp"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:id="@+id/item_view_menu_btn"
            android:text="Menu"
            android:textColor="@drawable/button_text_color"
            android:textAllCaps="false"
            android:textSize="17sp"
            android:gravity="center_vertical"
            android:paddingLeft="60dp"
            android:background="@mipmap/menu"
            android:visibility="gone"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/cairo"
            />
        <Button
            android:layout_marginTop="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/item_view_loyalty_btn"
            android:text="Loyalty"
            android:textColor="@drawable/button_text_color"
            android:textAllCaps="false"
            android:textSize="19sp"
            android:gravity="center"
            android:visibility="gone"
            android:fontFamily="@font/cairo"

            />
        <Button
            android:layout_marginTop="3dp"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:id="@+id/item_directions_btn"
            android:text="Direction to here"
            android:textColor="@drawable/button_text_color"
            android:textAllCaps="false"
            android:textSize="17sp"
            android:gravity="center_vertical"
            android:paddingLeft="60dp"
            android:background="@mipmap/comment"
            android:visibility="visible"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/cairo"
            />
    </LinearLayout>
</LinearLayout>
</ScrollView>