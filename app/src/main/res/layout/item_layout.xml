<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="#4Dffffff"
    android:paddingTop="10dp"
    android:layout_marginBottom="10dp"
    android:paddingStart="5dp"
    android:paddingEnd="5dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@mipmap/carfor"
        android:id="@+id/item_icon"
        android:background="#fff"
        android:layout_gravity="center"
        android:layout_weight="1.14"
        />
<View

    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="#bdbdbd"

   />
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp">
        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

            android:layout_marginBottom="10dp">
        <TextView
            android:text="Carrefour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name2_tv"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="#000080"
            android:layout_marginLeft="5dp"
          />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/rounded_cornenr_imageview"
                >

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                app:srcCompat="@mipmap/staron"
                android:layout_marginTop="1dp"
                />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2.0"
                    android:textSize="15dp"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/item_rate_value"
                    android:textColor="#FFCD02"
                    android:layout_marginTop="-3dp"
                    android:layout_weight="1.14" />
            </LinearLayout>
        </LinearLayout>
        <com.sackcentury.shinebuttonlib.ShineButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="20dp"
            android:src="@android:color/darker_gray"
            app:btn_color="@android:color/darker_gray"
            app:btn_fill_color="#FF6666"
            app:allow_random_color="true"
            app:big_shine_color="#FF6666"
            app:click_animation_duration="200"
            app:shine_animation_duration="1500"
            app:shine_turn_angle="10"
            app:small_shine_offset_angle="20"
            app:shine_distance_multiple="1.5"
            app:small_shine_color="#CC9999"
            app:shine_count="8"
            app:siShape="@raw/heart"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:id="@+id/like_btn"
            />
    </GridLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_cornenr_spinner"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="10dp"
    >
    <Spinner
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:entries="@array/rate_values"
        android:id="@+id/rate_spinner"

        >
    </Spinner>
    </LinearLayout>
    <TextView
        android:text="One of the most dignfied hyper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/item_description"
        android:layout_marginLeft="15dp"
        android:textSize="16sp"
        android:textColor="@color/colorPrimaryDark"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="10dp"
>
   <Button
       android:layout_width="wrap_content"
       android:layout_height="44dp"
       android:id="@+id/option_btn"
       android:text="View"
       android:textColor="@drawable/button_text_color"
       android:textAllCaps="false"
       android:textSize="19sp"
       android:gravity="center_vertical"
       android:paddingLeft="60dp"
       android:background="@mipmap/menu"
       android:visibility="visible"
       android:layout_gravity="center_horizontal"
       />
        <Button
            android:layout_marginTop="3dp"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:id="@+id/item_call_btn"
            android:text="Call"
            android:textColor="@drawable/button_text_color"
            android:textAllCaps="false"
            android:textSize="19sp"
            android:gravity="center_vertical"
            android:paddingLeft="60dp"
            android:background="@mipmap/call"
            android:visibility="visible"
            android:layout_gravity="center_horizontal"
            />
