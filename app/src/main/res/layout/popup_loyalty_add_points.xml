<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TableLayout
        android:paddingStart="25dp"
        android:paddingEnd="25dp"
        android:paddingTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow>
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shop Name:"
                android:textSize="18sp"/>
            <TextView
                android:textSize="20sp"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XXXXX"
                android:id="@+id/shop_name_add_points"/>
        </TableRow>
        <TableRow>
            <TextView
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shop Passcode:"/>
            <EditText
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Enter Passcode..."
                android:id="@+id/shop_passcode_add_points"/>
        </TableRow>
        <TableRow>
            <TextView
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order Number:"
                />
            <EditText
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Enter the order id..."
                android:id="@+id/order_num_add_points"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bill Amount:"/>
            <EditText
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Enter the order id..."
                android:id="@+id/bill_amount_add_points"/>
        </TableRow>

    </TableLayout>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:padding="15dp"
        >
        <Button android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Cancel"
            android:background="@drawable/rounded_corner_explore_btn"
            android:textColor="#fff"
            android:id="@+id/loyal_cancel_btn"
            />
        <View
            android:layout_width="10dp"
            android:layout_height="0dp"/>
        <Button
            android:textColor="#fff"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Verify"
            android:background="@drawable/rounded_corner_explore_btn"
            android:id="@+id/loyal_verifiy_btn"/>
    </LinearLayout>

</LinearLayout>