<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="145dp"
    android:background="@drawable/cat_customshape"
    android:paddingLeft="10dp"
    android:descendantFocusability="blocksDescendants">

    <TextView
        android:id="@+id/shopNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:text="Category Name"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="15sp"
        android:textStyle="bold"
        android:fontFamily="@font/cairo"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >


        <ImageView
            android:layout_width="95dp"
            android:layout_height="90dp"
            android:id="@+id/shopPic"
            android:src="@mipmap/ic_launcher"
            android:scaleType="fitXY"
            android:cropToPadding="false"
            android:focusable="false"
            android:clickable="false"
            android:focusableInTouchMode="false"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="end"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:clickable="false">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="78dp"
                android:text="Category deaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaatail"
                android:gravity="start"
                android:id="@+id/category_details_tv"
                android:layout_marginLeft="10dp"
                android:paddingBottom="1dp"
                android:textColor="#3f3f3f"
                android:textSize="13.5sp"
                android:paddingRight="5dp"
                android:fontFamily="@font/cairo"
                android:lineSpacingExtra="-7dp"

                />
            <Button
                android:layout_width="85dp"
                android:layout_height="29dp"
                android:text="@string/arrow_left"
                android:textColor="@android:color/white"
                android:textSize="13sp"
                android:textStyle="bold"
                android:id="@+id/explore_btn"
                android:background="@drawable/rounded_corner_explore_btn"
                android:layout_marginRight="9dp"
                android:textAllCaps="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:clickable="false"
                android:layout_gravity="bottom|end"
                android:selectAllOnFocus="true"
                />
        </LinearLayout>


</LinearLayout>

</LinearLayout>

